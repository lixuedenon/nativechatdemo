<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/AndroidManifest.xml -->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:targetApi="31">

        <!-- 女生模块页 -->
        <activity
            android:name=".ui.modules.FemaleModulesActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 男生模块页 -->
        <activity
            android:name=".ui.modules.MaleModulesActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 角色选择页 -->
        <activity
            android:name=".ui.character.CharacterSelectionActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 复盘页面 -->
        <activity
            android:name=".ui.review.ReviewActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 社交雷达菜单 -->
        <activity
            android:name=".ui.radar.RadarMenuActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 对话学习模式 -->
        <activity
            android:name=".ui.conversation.ConversationLearnActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 对话练习模式 -->
        <activity
            android:name=".ui.conversation.ConversationPracticeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- 主页 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 聊天页 -->
        <activity
            android:name=".ui.chat.ChatActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".ui.custom.CustomPartnerMenuActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.custom.CustomTraitInputActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.custom.ConfessionTestActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>