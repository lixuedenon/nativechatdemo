<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/res/layout/activity_character_config.xml -->
<!-- 文件名：activity_character_config.xml -->
<!-- 文件类型：Layout（XML布局文件）-->
<!-- 状态：✅ 新建文件 -->
<!-- 功能：角色配置界面布局，包含模式切换、模板列表、自定义配置区域 -->
<!-- 对应Activity：CharacterConfigActivity.kt -->
<!-- 创建日期：2025-10-28 -->
<!-- 作者：Claude -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置你的AI角色"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择预设模板或自定义配置"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- 模式选择 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <RadioGroup
                android:id="@+id/modeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/quickModeRadio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快速模板"
                    android:textSize="16sp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/customModeRadio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自定义配置"
                    android:textSize="16sp"/>

            </RadioGroup>

        </com.google.android.material.card.MaterialCardView>

        <!-- 快速模板列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/templateRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="visible"/>

        <!-- 自定义配置区域 -->
        <LinearLayout
            android:id="@+id/customConfigLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- 维度1：基础身份 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📋 维度1：基础身份"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- 年龄 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="年龄"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/ageSlider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="18"
                            android:valueTo="35"
                            android:value="22"
                            android:stepSize="1"/>

                        <TextView
                            android:id="@+id/ageValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22岁"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:minWidth="50dp"/>

                    </LinearLayout>

                    <!-- 职业 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="职业"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/occupationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"/>

                    <!-- 教育程度 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="教育程度"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/educationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 维度2：性格类型 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎭 维度2：性格类型"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- 性格类型 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="性格类型（6选1）"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/personalitySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"/>

                    <!-- 脏话程度 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="脏话程度"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/profanitySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"/>

                    <!-- 表情使用 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="表情符号使用频率"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/emojiSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 维度3：兴趣爱好 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎨 维度3：兴趣爱好（最多3个）"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- 爱好1 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="爱好1"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/hobby1Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"/>

                    <!-- 爱好2 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="爱好2（可选）"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/hobby2Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"/>

                    <!-- 爱好3 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="爱好3（可选）"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/hobby3Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 维度4：社交风格 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💬 维度4：社交风格"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- 主动性 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="主动性（0=被动，10=超主动）"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/proactivitySlider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="10"
                            android:value="5"
                            android:stepSize="1"/>

                        <TextView
                            android:id="@+id/proactivityValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:minWidth="50dp"/>

                    </LinearLayout>

                    <!-- 开放度 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开放度（0=保守，10=开放）"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/opennessSlider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="10"
                            android:value="5"
                            android:stepSize="1"/>

                        <TextView
                            android:id="@+id/opennessValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:minWidth="50dp"/>

                    </LinearLayout>

                    <!-- 聊天习惯 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="回复速度"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/chatHabitSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 角色名称 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="给角色起个名字"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/characterNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="例如：小美、Lisa、小雅"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:maxLines="1"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 保存按钮 -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="保存并开始聊天"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"/>

    </LinearLayout>

</ScrollView>