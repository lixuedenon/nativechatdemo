<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/res/layout/item_message_me.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="260dp">

        <!-- 引用内容区域 -->
        <LinearLayout
            android:id="@+id/quotedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_quoted_message"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/quotedSenderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对方"
                android:textSize="11sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quotedContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="引用的消息内容"
                android:textSize="12sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- 消息气泡 -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_user"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF" />

    </LinearLayout>

</LinearLayout>