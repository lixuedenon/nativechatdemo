<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/res/layout/activity_radar_practice.xml -->
<!-- 文件类型：Android Layout XML -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="练习模式"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ========== 状态1：说明页 ========== -->
    <LinearLayout
        android:id="@+id/introLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/introTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来到练习模式"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/introDescText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="说明文字"
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始练习"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="?attr/colorPrimary"/>
    </LinearLayout>

    <!-- ========== 状态2：对话展示页 ========== -->
    <LinearLayout
        android:id="@+id/dialogueLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/dialogueContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"/>
        </ScrollView>

        <Button
            android:id="@+id/startPracticeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始答题"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:backgroundTint="?attr/colorPrimary"/>
    </LinearLayout>

    <!-- ========== 状态3：练习答题页 ========== -->
    <LinearLayout
        android:id="@+id/practiceLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/currentQuestionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="第 1 题 / 共 10 题"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总分：0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 场景描述 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/contextDescText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="场景描述"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:padding="16dp"/>
                </androidx.cardview.widget.CardView>

                <!-- 对方的话 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <TextView
                        android:id="@+id/partnerMessageText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="对方的话"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:padding="20dp"/>
                </androidx.cardview.widget.CardView>

                <!-- 选项区域 -->
                <LinearLayout
                    android:id="@+id/optionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你会怎么回答？"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/optionButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="A. 选项1"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="start|center_vertical"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/optionButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="B. 选项2"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="start|center_vertical"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/optionButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="C. 选项3"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="start|center_vertical"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/optionButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="D. 选项4"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:gravity="start|center_vertical"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>

                <!-- 分析区域 -->
                <LinearLayout
                    android:id="@+id/analysisLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFF3E0">

                        <TextView
                            android:id="@+id/intentText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="对方的真实意图"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#E8F5E9">

                        <TextView
                            android:id="@+id/selectedAnalysisText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="你的回答分析"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F3E5F5">

                        <TextView
                            android:id="@+id/recommendText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="推荐答案"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"/>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/nextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="下一题"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        android:backgroundTint="?attr/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>