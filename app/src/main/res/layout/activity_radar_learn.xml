<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/res/layout/activity_radar_learn.xml -->
<!-- 文件类型：Android Layout XML -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="学习模式"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ========== 状态1：说明页 ========== -->
    <LinearLayout
        android:id="@+id/introLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/introTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来到学习模式"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/introDescText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="说明文字"
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始学习"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="?attr/colorPrimary"/>
    </LinearLayout>

    <!-- ========== 状态2：对话展示页 ========== -->
    <LinearLayout
        android:id="@+id/dialogueLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/dialogueContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"/>
        </ScrollView>

        <Button
            android:id="@+id/finishViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完成查看，进入复盘"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:backgroundTint="?attr/colorPrimary"/>
    </LinearLayout>

    <!-- ========== 状态3：复盘分析页 ========== -->
    <LinearLayout
        android:id="@+id/analysisLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 对话复盘分析"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="16dp"
            android:background="#FFFFFF"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/analysisContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"/>
        </ScrollView>

        <Button
            android:id="@+id/backToMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回菜单"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:backgroundTint="?attr/colorPrimary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>