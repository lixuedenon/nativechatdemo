<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/res/layout/layout_quote_preview.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quotePreviewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#F5F5F5"
    android:padding="8dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quotePreviewSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用：对方"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quotePreviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="引用的消息内容..."
            android:textSize="13sp"
            android:textColor="#888888"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/quoteCancelButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="取消引用" />

</LinearLayout>