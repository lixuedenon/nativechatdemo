<?xml version="1.0" encoding="utf-8"?>
<!-- 文件路径：app/src/main/res/layout/activity_custom_trait_input.xml -->
<!-- 文件类型：XML Layout -->
<!-- 文件状态：【新建】 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/traitSelectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 性格 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="性格"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/personalityChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp" />

            <!-- 兴趣爱好 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兴趣爱好"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/interestChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp" />

            <!-- 情感特征 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="情感特征"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/emotionChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp" />

            <!-- 生活态度 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生活态度"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/lifestyleChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp" />

            <!-- 社交特点 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="社交特点"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/socialChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp" />

            <!-- 自定义描述 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="补充描述（可选）"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/customDescriptionEdit"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="输入更详细的性格描述..."
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp" />

            <!-- 聊天建议 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFF9E6">

                <TextView
                    android:id="@+id/suggestionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="请选择特质以获取聊天建议"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 底部按钮栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/randomTraitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="随机生成"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/startChatButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始聊天"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>